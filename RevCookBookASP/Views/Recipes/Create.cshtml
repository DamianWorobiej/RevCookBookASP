@model RevCookBookASP.ViewModels.RecipeViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Recipe</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Text" class="control-label"></label>
                <textarea asp-for="Text" class="form-control"></textarea>
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DishId" class="control-label">
                    @Html.DisplayNameFor(model => model.Dish)
                </label>
                <div>
                    @Html.DropDownList("DishId", Model.DishesList, String.Empty)
                </div>
            </div>
            <div class="form-group">
                <label asp-for="LanguageId" class="control-label">
                    @Html.DisplayNameFor(model => model.Language)
                </label>
                <div>
                    @Html.DropDownList("LanguageId", Model.LanguagesList)
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
