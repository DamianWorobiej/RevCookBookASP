@model RevCookBookASP.ViewModels.RecipeViewModel

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="RecipeId" />
    <div class="form-group">
        @Html.LabelFor(model => model.Text)
        @Html.TextAreaFor(model => model.Text)
        @Html.ValidationMessageFor(model => model.Text)
    </div>
    <div class="form-group">
        <label asp-for="DishId" class="control-label">
            @Html.DisplayNameFor(model => model.Dish)
        </label>
        <div>
            @Html.DropDownList("DishId", Model.DishesList, String.Empty)
        </div>
        @Html.ValidationMessageFor(model => model.DishId)
    </div>
    <div class="form-group">
        <label asp-for="LanguageId" class="control-label">
            @Html.DisplayNameFor(model => model.Language)
        </label>
        <div>
            @Html.DropDownList("LanguageId", Model.LanguagesList)
        </div>
        @Html.ValidationMessageFor(model => model.LanguageId)
    </div>
    <div class="form-group">
        <input type="submit" value="@ViewData["FormSubmitButtonValue"]" class="btn btn-default" />
    </div>
}